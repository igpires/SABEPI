<div class="container">
  <!-- Outer Row -->
  <div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row">
            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
            <div class="col-lg-6">
              <div class="p-5">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Bem-vindo ao SABEPI</h1>
                </div>
                <%= form_for :classroom, url: '/site/classroom', method: :get, class: "user" do |form| %>
                  </br>
                  </br>
                  <div class="form-group">
                    <label>Digite o código da sala</label>
                    <%= text_field_tag :code, params[:code], class:"form-control form-control-user", placeholder:"Código da sala" %>
                  </div>
                  </br>
                  <button type="submit" class="btn btn-primary btn-block">
                    Entrar na sala
                  </button>
                  </br>
                  <hr>
                <% end %>
                <a href="<%= users_backoffice_welcome_index_path %>" class="btn btn-google btn-user btn-block user">
                  Professores
                </a>  
                
                </br>
                <div class="text-center">
                    <a class="small">
                      <%=  link_to 'Área administrativa', admins_backoffice_welcome_index_path %>
                    </a>
                </div>
                <hr>
                </br>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>