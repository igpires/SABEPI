<div class="table-responsive">
  <div class="card">
    <h5 class="card-header text-center bg-dark text-white"><%= t('messages.listing', model: @courses.model_name.human(count: 2)) %></h5>
    <div class="card-body">
      <table id="dataTable" class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col"><%= attribute_name(@courses, :id) %></th>
            <th scope="col"><%= attribute_name(@courses, :description) %></th>
            <!-- New course -->
            <th scope="col">
              <%= link_to new_admins_backoffice_course_path, class:"btn-success btn-circle" do %>
                <i class="fas fa-plus"></i>
              <% end %>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @courses.each do |course| %>
            <tr>
              <td scope="row"><%= course.id %></td>
              <td><%= link_to course.name, admins_backoffice_course_path(course) %></td>
              <td>

                <!-- Edit admin -->
                <%=  link_to edit_admins_backoffice_course_path(course), class:"btn-primary btn-circle" do %>
                  <i class="fa fa-edit"></i>
                <% end %>

                <!-- Delete admin -->
                <%=  link_to admins_backoffice_course_path(course), method: :delete, class:"btn-danger btn-circle", data:{confirm: "VocÃª tem CERTEZA que deseja APAGAR essa Disciplina??"} do %>
                  <i class="fa fa-minus"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
