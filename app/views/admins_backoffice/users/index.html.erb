<div class="table-responsive">
  <div class="card">
    <h5 class="card-header text-center bg-dark text-white"><%= t('messages.listing', model: @users.model_name.human(count: 2)) %></h5>
    <div class="card-body">
      <table id="dataTable" class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col"><%= attribute_name(@users, :id) %></th>
            <th scope="col"><%= attribute_name(@users, :email) %></th>
            <th scope="col"><%= attribute_name(@users, :name) %></th>
            
            <!-- New Professor -->
            <th scope="col">
              <%= link_to new_admins_backoffice_user_path, class:"btn btn-success btn-circle" do %>
              <i class="fas fa-plus"></i>
              <% end %>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |users| %>
            <tr>
              <th scope="row"><%= users.id %></th>
              <td><%= users.email %></td>
              <td><%= users.name %></td>
              <td>

                <!-- Edit user -->
                <%=  link_to edit_admins_backoffice_user_path(users), class:"btn btn-primary btn-circle" do %>
                  <i class="fa fa-edit"></i>
                <% end %>

                <!-- Delete user -->
                <%=  link_to admins_backoffice_user_path(users), method: :delete, class:"btn btn-danger btn-circle", data:{confirm: "VocÃª tem CERTEZA que deseja APAGAR esse Professor?"} do %>
                  <i class="fa fa-minus"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
