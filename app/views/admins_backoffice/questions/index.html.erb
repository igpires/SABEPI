<div class="table-responsive">
  <div class="card">
    <h5 class="card-header text-center bg-dark text-white"><%= t('messages.listing', model: @questions.model_name.human(count: 2)) %></h5>
    <div class="card-body">
      <table id="dataTable" class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col"><%= attribute_name(@questions, :id) %></th>
            <th scope="col"><%= attribute_name(@questions, :name) %></th>
            <th scope="col"><%= attribute_name(@questions, :topic) %></th>
            <th scope="col"><%= attribute_name(@questions, :subject) %></th>
            <!-- New question -->
            <th scope="col">
              <%= link_to new_admins_backoffice_question_path, class:"btn-success btn-circle" do %>
                <i class="fas fa-plus"></i>
              <% end %>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @questions.each do |question| %>
            <tr>
              <td scope="row"><%= question.id %></td>
              <td><%= question.description %></td>
              <td><%= question.topic.name %></td>
              <td><%= question.topic.subject.name %></td>
              <td>

                <!-- Edit admin -->
                <%=  link_to edit_admins_backoffice_question_path(question), class:"btn-primary btn-circle" do %>
                  <i class="fa fa-edit"></i>
                <% end %>

                <!-- Delete admin -->
                <%=  link_to admins_backoffice_question_path(question), method: :delete, class:"btn-danger btn-circle", data:{confirm: t('messages.confirm_with', item: question.description.truncate(30))} do %>
                  <i class="fa fa-minus"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
