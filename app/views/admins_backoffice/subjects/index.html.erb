<div class="table-responsive">
  <div class="card">
    <h5 class="card-header text-center bg-dark text-white"><%= t('messages.listing', model: @subjects.model_name.human(count: 2)) %></h5>
    <div class="card-body">
      <table id="dataTable" class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col"><%= attribute_name(@subjects, :id) %></th>
            <th scope="col"><%= attribute_name(@subjects, :name) %></th>
            <th scope="col"><%= attribute_name(@subjects, :courses) %></th>
            <!-- New subject -->
            <th scope="col">
              <%= link_to new_admins_backoffice_subject_path, class:"btn-success btn-circle" do %>
                <i class="fas fa-plus"></i>
              <% end %>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @subjects.each do |subject| %>
            <tr>
              <td scope="row"><%= subject.id %></td>
              <td><%= subject.name %></td>
              <td><%= subject.course.name %></td>
              <td>

                <!-- Edit admin -->
                <%=  link_to edit_admins_backoffice_subject_path(subject), class:"btn-primary btn-circle" do %>
                  <i class="fa fa-edit"></i>
                <% end %>

                <!-- Delete admin -->
                <%=  link_to admins_backoffice_subject_path(subject), method: :delete, class:"btn-danger btn-circle", data:{confirm: t('messages.confirm_with', item: subject.name.truncate(30))} do %>
                  <i class="fa fa-minus"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
