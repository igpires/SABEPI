<div class="table-responsive" style="padding:5%">
  <div class="card">
    <h5 class="card-header text-center bg-dark text-white">Lista de Administradores</h5>
    <div class="card-body">
      <table id="dataTable" class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Email</th>
            <!-- New admin -->
            <th scope="col">
              <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle" do %>
              <i class="fas fa-plus"></i>
              <% end %>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @admins.each do |admin| %>
            <tr>
              <th scope="row"><%= admin.id %></th>
              <td><%= admin.email %></td>
              <td style="width: 100px">

                <!-- Edit admin -->
                <%=  link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle" do %>
                  <i class="fa fa-edit"></i>
                <% end %>

                <!-- Delete admin -->
                <%=  link_to admins_backoffice_admin_path(admin), method: :delete, class:"btn btn-danger btn-circle", data:{confirm: "VocÃª tem CERTEZA que deseja APAGAR esse Administrador?"} do %>
                  <i class="fa fa-minus"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
