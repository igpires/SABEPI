<div class="table-responsive">
  <div class="card">
    <h5 class="card-header text-center bg-dark text-white"><%= t('messages.listing', model: @topics.model_name.human(count: 2)) %></h5>
    <div class="card-body">
      <table id="dataTable" class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col"><%= attribute_name(@topics, :id) %></th>
            <th scope="col"><%= attribute_name(@topics, :name) %></th>
            <th scope="col"><%= attribute_name(@topics, :subject) %></th>
            <th scope="col"><%= attribute_name(@topics, :course) %></th>
            <!-- New topic -->
            <th scope="col">
              <%= link_to new_admins_backoffice_topic_path, class:"btn-success btn-circle" do %>
                <i class="fas fa-plus"></i>
              <% end %>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @topics.each do |topic| %>
            <tr>
              <td scope="row"><%= topic.id %></td>
              <td><%= topic.name %></td>
              <td><%= topic.subject.name %></td>
              <td><%= topic.subject.course.name %></td>
              <td>

                <!-- Edit admin -->
                <%=  link_to edit_admins_backoffice_topic_path(topic), class:"btn-primary btn-circle" do %>
                  <i class="fa fa-edit"></i>
                <% end %>

                <!-- Delete admin -->
                <%=  link_to admins_backoffice_topic_path(topic), method: :delete, class:"btn-danger btn-circle", data:{confirm: t('messages.confirm_with', item: topic.name.truncate(30))} do %>
                  <i class="fa fa-minus"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
