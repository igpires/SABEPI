<div class="table-responsive">
  <div class="card">
    <h5 class="card-header text-center bg-dark text-white">Lista de Disciplinas</h5>
    <div class="card-body">
      <table id="dataTable" class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col"><%= attribute_name(@themes, :id) %></th>
            <th scope="col"><%= attribute_name(@themes, :description) %></th>
            <th scope="col"><%= attribute_name(@themes, :subject_id) %></th>
            <!-- New theme -->
            <th scope="col">
              <%= link_to new_admins_backoffice_theme_path, class:"btn btn-success btn-circle" do %>
                <i class="fas fa-plus"></i>
              <% end %>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @themes.each do |theme| %>
            <tr>
              <td scope="row"><%= theme.id %></td>
              <td><%= link_to theme.description, admins_backoffice_theme_path(theme) %></td>
              <td><%= link_to theme.subject.description, admins_backoffice_theme_path(theme) %></td>
              <td>

                <!-- Edit admin -->
                <%=  link_to edit_admins_backoffice_theme_path(theme), class:"btn btn-primary btn-circle" do %>
                  <i class="fa fa-edit"></i>
                <% end %>

                <!-- Delete admin -->
                <%=  link_to admins_backoffice_theme_path(theme), method: :delete, class:"btn btn-danger btn-circle", data:{confirm: "VocÃª tem CERTEZA que deseja APAGAR essa Disciplina??"} do %>
                  <i class="fa fa-minus"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


